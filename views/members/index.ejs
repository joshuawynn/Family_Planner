<%- include('../partials/header') %>

<h2>Family Members</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Relation</th>
      <th>Age</th>
      <th>Hobbies</th>
      <th>Feeling Sick?</th>
    </tr>
  </thead>
  <tbody>
    <!-- Write the line of EJS to iterate over members using forEach -->
    <% members.forEach(function(m) { %>
      <tr>
        <td><%= m.name %></td>
        <td><%= m.relation %></td>
        <td><%= m.age %></td>
        <td><%= m.hobby.join(', ') %></td>
        <!-- finish the ternary expression to display 'Yes' or 'Nope' -->
        <td><%= m.feelingSick ? 'Yes' : 'No' %></td>
        <% if (user) { %>
        <td><a href="/members/<%= m._id %>">View</a></td>
        <% } %>
      </tr>
    <!-- Close the forEach using EJS here -->
    <% }); %>
  </tbody>
</table>


<%- include('../partials/footer') %>